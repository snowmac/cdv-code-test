datasource moviesDb {
  provider = "sqlite"
  url      = "file:./movies.db"
}

datasource ratingsDb {
  provider = "sqlite"
  url      = "file:./ratings.db"
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/movies"
  datasource = "moviesDb"
}

generator client_ratings {
  provider   = "prisma-client-js"
  output     = "./generated/ratings"
  datasource = "ratingsDb"
}

model Movie {
  id          Int     @id @default(autoincrement())
  imdbId      String  @unique
  title       String
  genres      String
  releaseDate String
  budget      Int
}

model Rating {
  id       Int     @id @default(autoincrement())
  imdbId   String  @unique
  rating   Float
}
